{
    "layer": "top",
    "spacing": 0, // Let the CSS handle spacing via margins
    "modules-left": [
        "niri/workspaces",
        "tray",
        "bluetooth",
    ],
    "modules-center": [
        "niri/window"
    ],
    "modules-right": [
        "pulseaudio",
        "battery",
        "clock",
    ],
    "tray": {
        "spacing": 10,
    },
    "niri/window": {
        "all-outputs": true,
        "format": "{title}",
        "align": "center",
        "max-length": 20,
        "min-length": 20
    },
    "niri/workspaces": {
        "disable-scroll": true,
        "all-outputs": true,
        "warp-on-scroll": false,
        "format": "{icon}",
        "format-icons": {
            "active": "•",
            "default": "•",
            "urgent": "•"
        }
    },
    "bluetooth": {
        "format": "",
        "on-click": "blueberry"
    },
    "clock": {
        "interval": 60,
        "align": 0,
        "rotate": 0,
        "tooltip-format": "<big>{:%B %Y}</big>\n<tt><small>{calendar}</small></tt>",
        "format": "{:%a %b %d, %I:%M %p}",
        "on-click": "swaync-client -t",
    },
    "battery": {
        "interval": 5,
        "states": {
            "good": 100,
            "warning": 30,
            "critical": 20
        },
        "format": "{capacity}% {icon}",
        "format-full": "{capacity}% {icon}",
        "format-charging": "{capacity}% 󰂄",
        "format-plugged": "{capacity}% ",
        "format-alt": "{time} {icon}",
        "format-icons": [
            "󰁻",
            "󰁽",
            "󰁿",
            "󰂁",
            "󰁹"
        ],
    },
    "network": {
        "format-wifi": "",
        "format-ethernet": "{ipaddr}/{cidr}",
        "tooltip-format": "{ifname} via {gwaddr}",
        "format-linked": "{ifname} (No IP)",
        "format-disconnected": "Disconnected",
        "format-alt": "  {essid}"
    },
    "pulseaudio": {
        "format": "{icon} ",
        "format-bluetooth": "{icon} ",
        "format-bluetooth-muted": " {icon} {format_source}",
        "format-muted": "    Muted",
        "format-icons": {
            "headphone": "",
            "hands-free": "",
            "headset": "",
            "phone": "",
            "portable": "",
            "car": "",
            "default": [
                "",
                "",
                ""
            ]
        },
        "scroll-step": 5,
        "on-click": "pactl set-sink-mute @DEFAULT_SINK@ toggle", // Click to mute
        "on-click-right": "pavucontrol"
    }
}
